<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="JCMFitnessMobileApp.Views.WorkoutDetailPage"
             Title="Workout Details">



    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="15">
            <Label Text="Name:"  FontSize="Small" TextColor="Black" />
            <Label Text="{Binding Workout.Name}" FontSize="Medium" TextColor="Black" />

            <Label Text="Description:" FontSize="Small" TextColor="Black"  />
            <Label Text="{Binding Workout.Description}" FontSize="Medium" TextColor="Black" />

            <Label Text="Category:" FontSize="Small" TextColor="Black"  />
            <Label Text="{Binding Workout.Category}" FontSize="Medium" TextColor="Black" />


            <CollectionView x:Name="exercises"
            ItemsSource="{Binding WorkoutExercises}"
                            SelectionMode="Single"
                            SelectionChangedCommand="{Binding ExerciseSelectedCommand}"
                            SelectedItem="{Binding SelectedExercise}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout Padding="10">

                            <Label Text="{Binding Name}"
                            LineBreakMode="NoWrap"
                            Style="{DynamicResource ListItemTextStyle}"
                            FontSize="20"
                            TextColor="Black"
                            FontAttributes="Bold, Italic"/>

                            <Label Text="{Binding TimerValue}"
                            LineBreakMode="NoWrap"
                            Style="{DynamicResource ListItemDetailTextStyle}"
                            FontSize="15"
                               TextColor="Black" />

                            <Label Text="{Binding Repititions}"
                            LineBreakMode="NoWrap"
                            Style="{DynamicResource ListItemDetailTextStyle}"
                            FontSize="15"
                               TextColor="Orange" />

                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <StackLayout Orientation="Horizontal">
                <Button Text="Delete" Command="{Binding DeleteCommand}" HorizontalOptions="FillAndExpand"></Button>
                <Button Text="Edit" Command="{Binding EditCommand}" HorizontalOptions="FillAndExpand"></Button>
                <Button Text="Add exercise" Command="{Binding AddExerciseCommand}" HorizontalOptions="FillAndExpand"></Button>
            </StackLayout>
        </StackLayout>

    </ContentPage.Content>
</ContentPage>