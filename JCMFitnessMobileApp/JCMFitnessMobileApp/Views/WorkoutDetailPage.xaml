<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    
    x:Class="JCMFitnessMobileApp.Views.WorkoutDetailPage">


    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Delete" Command="{Binding DeleteCommand}" />
    </ContentPage.ToolbarItems>


    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="15">
            <Label Text="Name:"  FontSize="Small" TextColor="Black" />
            <Label Text="{Binding Workout.Name}" FontSize="Medium" TextColor="Red" />

            <Label Text="Description:" FontSize="Small" TextColor="Black"  />
            <Label Text="{Binding Workout.Description}" FontSize="Medium" TextColor="Red" />

            <Label Text="Category:" FontSize="Small" TextColor="Black"  />
            <Label Text="{Binding Workout.Category}" FontSize="Medium" TextColor="Red" />

            <StackLayout Orientation="Horizontal">
                <Button Text="Delete" Command="{Binding DeleteCommand}" HorizontalOptions="FillAndExpand"></Button>
                <Button Text="Edit" Command="{Binding EditCommand}" HorizontalOptions="FillAndExpand"></Button>
            </StackLayout>
        </StackLayout>

    </ContentPage.Content>
</ContentPage>