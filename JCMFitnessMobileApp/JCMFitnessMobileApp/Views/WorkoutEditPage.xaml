<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JCMFitnessMobileApp.Views.WorkoutEditPage">
    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="15">

            <Label Text="Name:"  FontSize="Small" TextColor="Black" />
            <Entry Text="{Binding Workout.Name}" FontSize="Medium" TextColor="Red" />
            
            <Label Text="Description:" FontSize="Small" TextColor="Black"  />
            <Entry Text="{Binding Workout.Description}" FontSize="Medium" TextColor="Red" />
            
            <Label Text="Category:" FontSize="Small" TextColor="Black"  />
            <Entry Text="{Binding Workout.Category}" FontSize="Medium" TextColor="Red" />

            <Button Text="Save" Command="{Binding SaveWorkoutCommand}" HorizontalOptions="FillAndExpand"/>
        </StackLayout>

    </ContentPage.Content>
</ContentPage>