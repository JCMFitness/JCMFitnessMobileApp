<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JCMFitnessMobileApp.Views.WorkoutEditPage"
             Title="Edit Workout">
    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="15" BackgroundColor="{DynamicResource PageBackgroundColor}">

            <Label Text="Name:"  FontSize="Small" TextColor="{DynamicResource PrimaryTextColor}" />
            <Entry Text="{Binding Workout.Name}" FontSize="Medium" TextColor="{DynamicResource SecondaryTextColor}" />

            <Label Text="Description:" FontSize="Small" TextColor="{DynamicResource PrimaryTextColor}"  />
            <Entry Text="{Binding Workout.Description}" FontSize="Medium" TextColor="{DynamicResource SecondaryTextColor}" />

            <Label Text="Category:" FontSize="Small" TextColor="{DynamicResource PrimaryTextColor}"  />
            <Entry Text="{Binding Workout.Category}" FontSize="Medium" TextColor="{DynamicResource SecondaryTextColor}" />

            <Button Text="Save" Command="{Binding SaveWorkoutCommand}" TextColor="{DynamicResource SecondaryColor}" BackgroundColor="{DynamicResource PrimaryColor}" HorizontalOptions="FillAndExpand"/>
        </StackLayout>

    </ContentPage.Content>
</ContentPage>