<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JCMFitnessMobileApp.Views.EditUser">
    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="15">
            <Label Text="First Name:"  FontSize="Small" TextColor="Black" />
            <Entry Text="{Binding User.FirstName}" FontSize="Medium" TextColor="Red" />

            <Label Text="Last Name:" FontSize="Small" TextColor="Black"  />
            <Entry Text="{Binding User.LastName}" FontSize="Medium" TextColor="Red" />

            <Label Text="User Name:" FontSize="Small" TextColor="Black"  />
            <Entry Text="{Binding User.UserName}" FontSize="Medium" TextColor="Red" />

            <Label Text="Email:" FontSize="Small" TextColor="Black"  />
            <Entry Text="{Binding User.Email}" FontSize="Medium" TextColor="Red" />

            <Button Text="Save" Command="{Binding SaveUserCommand}" HorizontalOptions="FillAndExpand"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>